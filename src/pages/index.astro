    ]}
    image={{
      src: 'https://res.cloudinary.com/dke0bmtls/image/upload/v1737474209/zdev/bacn4fjkdglppi6clzwf.png',
      alt: 'Busines Web',
    }}
  >
    <Fragment slot="content">Traveler Web: Web Trip Wisata Tulungagung</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Proyek', amount: '10+' },
      { title: 'Layanan', amount: '3+' },
      { title: 'Client', amount: '10+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
  id='Kontak'
    actions={[
      {
        variant: 'primary',
